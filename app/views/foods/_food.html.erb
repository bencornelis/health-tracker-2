<table class="table">
  <thead>
    <%= render "foods/food_headers" %>
  </thead>
  <tbody>
    <% @meals.each do |meal| %>
    <tr>
      <td><%= meal.food.food %></td>
      <td><%= meal.food.calories %></td>
      <td><%= meal.date_to_s %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate(@meals) %>
